 arr = [7,1,5,3,6,4]
let min=arr[0]
 for(let i=0;i<arr.length;i++){
    if(min>arr[i]){
        min=i
    }
 }
 console.log(min)
 //max
 let max=arr[min+1]
 for(let i=min+1;i<arr.length;i++){
if(max<arr[i]){
    max=i
}
 }
 console.log(max)
 if(min==arr.length-1){
    console.log(0)
 }
 console.log(arr[max]-arr[min])